{
  "name": "yabai-tomadachi",
  "version": "1.0.0",
  "description": "A friendly companion tool for yabai window manager",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "yabai-tomadachi": "./src/yabai-tomadachi.js",
    "yabai-tomadachi-gui": "./src/yabai-tomadachi-gui.js",
    "yabai-tomadachi-mcp": "./dist/index.js"
  },
  "scripts": {
    "start": "node src/yabai-tomadachi.js",
