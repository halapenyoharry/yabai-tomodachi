<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="2">
    <title>yabai-tamadachi</title>
    <organization>com.halapenyoharry</organization>
    <domains enable_localSystem="true" enable_currentUserHome="true"/>
    <options customize="always" require-scripts="false" hostArchitectures="arm64,x86_64"/>
    
    <welcome file="welcome.rtf" mime-type="text/rtf"/>
    
    <choices-outline>
        <line choice="com.halapenyoharry.yabai-tamadachi"/>
        <line choice="com.halapenyoharry.yabai-tamadachi.yabai"/>
    </choices-outline>
    
    <choice id="com.halapenyoharry.yabai-tamadachi" title="yabai-tamadachi" enabled="true" selected="true" visible="true">
        <pkg-ref id="com.halapenyoharry.yabai-tamadachi.app"/>
    </choice>
    
    <choice id="com.halapenyoharry.yabai-tamadachi.yabai" title="yabai window manager" 
            description="Install yabai window manager binary (required for yabai-tamadachi to function). Uncheck if you prefer to install via Homebrew."
            enabled="true" selected="true" visible="true">
        <pkg-ref id="com.halapenyoharry.yabai-tamadachi.yabai.pkg"/>
    </choice>
    
    <pkg-ref id="com.halapenyoharry.yabai-tamadachi.app">yabai-tamadachi-app.pkg</pkg-ref>
    <pkg-ref id="com.halapenyoharry.yabai-tamadachi.yabai.pkg">yabai-binary.pkg</pkg-ref>
</installer-gui-script>